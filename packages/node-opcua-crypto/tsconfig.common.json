{
    "compilerOptions": {
        "target": "es2022",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "module": "esnext",
        "verbatimModuleSyntax": true,
        "sourceMap": true,
        "strict": true,
        "listFiles": false,
        "traceResolution": false,
        "types": ["node"],
        "rootDir": "."
    },
    "include": ["index.ts", "source/**/*.ts", "source_nodejs/**/*.ts"]
}
